   <webglcanvas width='800' height='600' surfaceWidth='800' surfaceHeight='600' dockpanel.dock='left' on.frame='frame' on.loaded='loaded' />
   <accordion dockpanel.dock='right'>
     <accordionitem header='Transform'>
<stack>
  <textblock>Position</textblock>
  <stack orientation='horizontal'>
    <textblock>X:</textblock>
    <textbox />
    <textblock>Y:</textblock>
    <textbox />
    <textblock>Z:</textblock>
    <textbox />
  </stack>
  <textblock>Rotation</textblock>
  <stack orientation='horizontal'>
    <textblock>X:</textblock>
    <textbox />
    <textblock>Y:</textblock>
    <textbox />
    <textblock>Z:</textblock>
    <textbox />
  </stack>
  <textblock>Scale</textblock>
  <stack orientation='horizontal'>
    <textblock>X:</textblock>
    <textbox />
    <textblock>Y:</textblock>
    <textbox />
    <textblock>Z:</textblock>
    <textbox />
  </stack>  
</stack>     
     </accordionitem>
   </accordion>
   <treeview dockpanel.dock='right' on.treenodeselected='demotreeview_selection' borderthickness='1' bordercolor='Black' >
      <treenode draggable='true' childvisibility='visible' header='Tree Node L1A' >
         <treenode draggable='true' header='Tree Node L2A (custom icon)' >
            <fileicon>
               <border width='20' height='20' cornerradius='20' background='Orange' />
            </fileicon>
         </treenode>
         <treenode draggable='true' childvisibility='visible' header='Tree Node L2B'>
            <treenode draggable='true' header='Tree Node L3A' />
            <treenode draggable='true' header='Tree Node L3B' />
            <treenode draggable='true' header='Tree Node L3C' />
         </treenode>
         <treenode header='Tree Node L2C' />
      </treenode>
      <treenode header='Tree Node L1B' />
   </treeview>
</dockpanel>