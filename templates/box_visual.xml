<accordionitem header='Box Visual'>
  <stack>
    <textblock text='Extents' />
    <vector3input on.changed='extents_changed' x='0' y='0' z='0' />
    <textblock text='Generate vertex attributes' />
    <stack orientation='horizontal'>
      <textblock text='Texture Coordinates' />
      <checkbox on.selectionchanged='texture_coords_changed' />
    </stack>
    <stack orientation='horizontal'>
      <textblock text='Normal' />
      <checkbox on.selectionchanged='normal_changed' />
    </stack>
    <stack orientation='horizontal'>
      <textblock text='Tangent' />
      <checkbox on.selectionchanged='tangent_changed' />
    </stack>
  </stack>
</accordionitem>